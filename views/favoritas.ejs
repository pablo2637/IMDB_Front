<%- include('templates/headerFav',{urlTitle: 'Películas Favoritas',user}) %>

    <% if (arrayMovies.length > 0) { %>

        <% arrayMovies.forEach(item => { %>
            <article>
                <h2> <%= item.title %> </h2>
                <img src="<%= item.image %>" alt="" width="300px">
                <% if (item.fav) { %>
                    <th><button id="btnFav<%- item.id_movie %>" class="btnFav favorita" data-movie_id=<%- item.id_movie %> data-user_id=<%- user.id %>><i class="fa-solid fa-star fa-xl"></i></button></th>
                <% } else { %>
                    <th><button id="btnFav<%- item.id_movie %>" class="btnFav" data-movie_id=<%- item.id_movie %> data-user_id=<%- user.id %>><i class="fa-solid fa-star fa-xl"></i></button></th>      
                <% } %>
                <p><%= item.year %></p>
                <p><%= item.directors %></p>
                <p><%= item.genres %></p>
                <p><%= item.runtimeStr %></p>

                <a href="/dashboard-usuario/userSearch/showMovie/<%- item.id_movie %>">Ver detalles</a>
                <a href="/dashboard-usuario/eliminar-favorita/<%= user.id %>?movie_id=<%= item.id_movie %>">Eliminar</a>                

                <div> (div oculto para preguntar si está seguro que quiere eliminar) </div>
            </article>
        <% }) %>

    <% } else { %>
     
        <p> No hay películas favoritas… </p>
     
    <% } %>
<%- include('templates/footer') %>