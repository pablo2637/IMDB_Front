<%- include('templates/headerSM',{opinions,movie, urlTitle: 'Mostrar Película' }) %>
    <section class="showMovie">
        <h1 class="showMovie"> <%- movie.title %> </h1>

        <div>
            <img src="<%- movie.image %>" alt="" height="200">
            <% if (movie.fav) { %>
                <button id="btnFav<%- movie.id_movie %>" data-movie_id=<%- movie.id_movie %> data-user_id=<%- user.id %>
                    class="btnFav favorita"><i class="fa-solid fa-star fa-2xl"></i></button>
            <% } else { %>
                <button id="btnFav<%- movie.id_movie %>" data-movie_id=<%- movie.id_movie %> data-user_id=<%- user.id %>
                    class="btnFav"><i class="fa-solid fa-star fa-2xl"></i></button>
            <% } %>
        </div>

        <div>
            <p>Año: <%- movie.year %> </p>
            <p>Duración: <%- movie.runtimeStr %> </p>
            <p>Géneros: <%- movie.genres %> </p>
            <p>Director: <%- movie.directors %> </p>
            <p>Actores: <%- movie.stars %> </p>
            <p>Rating: <%- movie.imdbRating %> </p>
            <p>Sinopsis: <%- movie.plot %> </p>
        </div>
    </section>

    <section>
